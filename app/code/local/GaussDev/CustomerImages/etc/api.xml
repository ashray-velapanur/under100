                        <message>Not created.</message>
                    </not_created>
                </faults>
            </customer_images>
        </resources>
        <acl>
            <resources>
                <gaussdev_customerimages translate="title" module="gaussdev_customerimages">
                    <title>Customer Images API</title>
                    <sort_order>1</sort_order>
                </gaussdev_customerimages>
            </resources>
        </acl>
    </api>
</config>